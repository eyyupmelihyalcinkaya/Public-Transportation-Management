@{
    ViewData["Title"] = "Kullanıcı Paneli";
    Layout = "_Layout";
}

<div class="container-fluid mt-4">
    <!-- Hoş Geldin Mesajı -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-body text-center">
                    <h2 class="card-title">
                        <i class="fas fa-user-circle text-primary"></i>
                        Hoş Geldiniz, @ViewBag.Username!
                    </h2>
                    <p class="card-text text-muted">Transport Management System kullanıcı panelinize hoş geldiniz.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı İşlemler -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">
                <i class="fas fa-bolt text-warning"></i>
                Hızlı İşlemler
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Bilet Satın Al -->
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card glass-card h-100 quick-action-card">
                <div class="card-body text-center">
                    <div class="quick-action-icon mb-3">
                        <i class="fas fa-ticket-alt text-success"></i>
                    </div>
                    <h5 class="card-title">Bilet Satın Al</h5>
                    <p class="card-text">Yeni seyahat biletinizi satın alın</p>
                    <button class="btn btn-success btn-sm" onclick="showTicketPurchase()">
                        <i class="fas fa-plus"></i> Bilet Al
                    </button>
                </div>
            </div>
        </div>

        <!-- Biletlerim -->
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card glass-card h-100 quick-action-card">
                <div class="card-body text-center">
                    <div class="quick-action-icon mb-3">
                        <i class="fas fa-list-alt text-info"></i>
                    </div>
                    <h5 class="card-title">Biletlerim</h5>
                    <p class="card-text">Aktif biletlerinizi görüntüleyin</p>
                    <a href="/User/Tickets" class="btn btn-info btn-sm">
                        <i class="fas fa-eye"></i> Görüntüle
                    </a>
                </div>
            </div>
        </div>

        <!-- Seyahat Geçmişi -->
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card glass-card h-100 quick-action-card">
                <div class="card-body text-center">
                    <div class="quick-action-icon mb-3">
                        <i class="fas fa-history text-warning"></i>
                    </div>
                    <h5 class="card-title">Seyahat Geçmişi</h5>
                    <p class="card-text">Geçmiş seyahatlerinizi inceleyin</p>
                    <a href="/User/TravelHistory" class="btn btn-warning btn-sm">
                        <i class="fas fa-clock"></i> Geçmiş
                    </a>
                </div>
            </div>
        </div>

        <!-- Profil -->
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card glass-card h-100 quick-action-card">
                <div class="card-body text-center">
                    <div class="quick-action-icon mb-3">
                        <i class="fas fa-user text-primary"></i>
                    </div>
                    <h5 class="card-title">Profil</h5>
                    <p class="card-text">Profil bilgilerinizi düzenleyin</p>
                    <a href="/User/Profile" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistikler -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">
                <i class="fas fa-chart-bar text-success"></i>
                İstatistikleriniz
            </h4>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Toplam Seyahat -->
        <div class="col-md-4 mb-3">
            <div class="card glass-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon mb-2">
                        <i class="fas fa-route text-primary"></i>
                    </div>
                    <h3 class="stat-number text-primary">12</h3>
                    <p class="stat-label">Toplam Seyahat</p>
                </div>
            </div>
        </div>

        <!-- Bu Ay Seyahat -->
        <div class="col-md-4 mb-3">
            <div class="card glass-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon mb-2">
                        <i class="fas fa-calendar-alt text-success"></i>
                    </div>
                    <h3 class="stat-number text-success">3</h3>
                    <p class="stat-label">Bu Ay Seyahat</p>
                </div>
            </div>
        </div>

        <!-- Toplam Harcama -->
        <div class="col-md-4 mb-3">
            <div class="card glass-card stat-card">
                <div class="card-body text-center">
                    <div class="stat-icon mb-2">
                        <i class="fas fa-money-bill-wave text-warning"></i>
                    </div>
                    <h3 class="stat-number text-warning">₺450</h3>
                    <p class="stat-label">Toplam Harcama</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Son Aktiviteler -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-info"></i>
                        Son Aktiviteleriniz
                    </h5>
                </div>
                <div class="card-body">
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-ticket-alt text-success"></i>
                            </div>
                            <div class="activity-content">
                                <h6>Bilet Satın Alındı</h6>
                                <p class="text-muted">İstanbul - Ankara seyahati için bilet satın alındı</p>
                                <small class="text-muted">2 saat önce</small>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-check-circle text-info"></i>
                            </div>
                            <div class="activity-content">
                                <h6>Seyahat Tamamlandı</h6>
                                <p class="text-muted">Ankara - İzmir seyahati başarıyla tamamlandı</p>
                                <small class="text-muted">1 gün önce</small>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-user-edit text-warning"></i>
                            </div>
                            <div class="activity-content">
                                <h6>Profil Güncellendi</h6>
                                <p class="text-muted">Profil bilgileriniz güncellendi</p>
                                <small class="text-muted">3 gün önce</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bilet Satın Alma Modal -->
<div class="modal fade" id="ticketPurchaseModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content glass-card">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-ticket-alt text-success"></i>
                    Bilet Satın Al
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="ticketPurchaseForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fromCity" class="form-label">Nereden</label>
                            <select class="form-select" id="fromCity" required>
                                <option value="">Şehir seçin</option>
                                <option value="istanbul">İstanbul</option>
                                <option value="ankara">Ankara</option>
                                <option value="izmir">İzmir</option>
                                <option value="bursa">Bursa</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="toCity" class="form-label">Nereye</label>
                            <select class="form-select" id="toCity" required>
                                <option value="">Şehir seçin</option>
                                <option value="istanbul">İstanbul</option>
                                <option value="ankara">Ankara</option>
                                <option value="izmir">İzmir</option>
                                <option value="bursa">Bursa</option>
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="travelDate" class="form-label">Seyahat Tarihi</label>
                            <input type="date" class="form-control" id="travelDate" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="passengerCount" class="form-label">Yolcu Sayısı</label>
                            <select class="form-select" id="passengerCount" required>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" onclick="purchaseTicket()">
                    <i class="fas fa-shopping-cart"></i> Bilet Satın Al
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    }

    .quick-action-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

    .quick-action-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    .quick-action-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    .stat-card {
        transition: transform 0.3s ease;
    }

    .stat-card:hover {
        transform: scale(1.05);
    }

    .stat-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .stat-number {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 0;
    }

    .activity-list {
        max-height: 300px;
        overflow-y: auto;
    }

    .activity-item {
        display: flex;
        align-items: flex-start;
        padding: 1rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .activity-item:last-child {
        border-bottom: none;
    }

    .activity-icon {
        font-size: 1.5rem;
        margin-right: 1rem;
        margin-top: 0.25rem;
    }

    .activity-content h6 {
        margin-bottom: 0.25rem;
        font-weight: 600;
    }

    .activity-content p {
        margin-bottom: 0.25rem;
        font-size: 0.9rem;
    }

    .activity-content small {
        font-size: 0.8rem;
    }

    .modal-content {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
    }
</style>

<script>
    function showTicketPurchase() {
        const modal = new bootstrap.Modal(document.getElementById('ticketPurchaseModal'));
        modal.show();
    }

    function purchaseTicket() {
        const fromCity = document.getElementById('fromCity').value;
        const toCity = document.getElementById('toCity').value;
        const travelDate = document.getElementById('travelDate').value;
        const passengerCount = document.getElementById('passengerCount').value;

        if (!fromCity || !toCity || !travelDate || !passengerCount) {
            alert('Lütfen tüm alanları doldurun!');
            return;
        }

        if (fromCity === toCity) {
            alert('Nereden ve nereye aynı şehir olamaz!');
            return;
        }

        // Burada API çağrısı yapılacak
        alert('Bilet satın alma işlemi başlatıldı! Bu özellik yakında eklenecek.');
        
        // Modal'ı kapat
        const modal = bootstrap.Modal.getInstance(document.getElementById('ticketPurchaseModal'));
        modal.hide();
    }

    // Sayfa yüklendiğinde navbar'ı güncelle
    document.addEventListener('DOMContentLoaded', function() {
        if (window.updateNavbar) {
            window.updateNavbar();
        }
    });
</script> 