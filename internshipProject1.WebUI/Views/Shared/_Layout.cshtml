<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - internshipProject1.WebUI</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/internshipProject1.WebUI.styles.css" asp-append-version="true" />

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Page specific styles -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Background overlay -->
    <div class="background-overlay"></div>

    <!-- Theme transition overlay -->
    <div id="theme-transition-overlay" class="theme-transition-overlay"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 glass-navbar" style="position: relative !important;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-bus"></i> Transport Manager
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                        <!-- Admin Panel - Sadece Admin rolündeki kullanıcılar için görünür -->
                        <li class="nav-item" id="navbar-admin-link" style="display: none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AdminPanel" asp-action="AdminMainPage">
                                <i class="fas fa-cogs"></i> Admin Panel
                            </a>
                        </li>
                        <!-- User Panel - Sadece User rolündeki kullanıcılar için görünür -->
                        <li class="nav-item" id="navbar-user-link" style="display: none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Dashboard">
                                <i class="fas fa-user"></i> Kullanıcı Paneli
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt"></i> Privacy
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2 align-items-center">
                        <!-- Login/Register Buttons (Giriş yapmamış kullanıcılar için) -->
                        <div id="auth-buttons" class="d-flex gap-2 align-items-center">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-auth btn-auth-login">
                                <i class="fas fa-sign-in-alt"></i> Giriş
                            </a>
                            <a asp-controller="Account" asp-action="Register" class="btn btn-auth btn-auth-register">
                                <i class="fas fa-user-plus"></i> Kayıt Ol
                            </a>
                        </div>

                        <!-- Profile Menu (Giriş yapmış kullanıcılar için) -->
                        <div id="profile-menu" class="dropdown d-none">
                            <button class="btn btn-auth btn-profile dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> <span id="username-display">Kullanıcı</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <!-- Admin Panel - Sadece Admin rolündeki kullanıcılar için görünür -->
                                <li id="dropdown-admin-link" style="display: none;">
                                    <a class="dropdown-item" href="/AdminPanel/AdminMainPage">
                                        <i class="fas fa-tachometer-alt"></i> Admin Panel
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="/User/Dashboard">
                                        <i class="fas fa-tachometer-alt"></i> Kullanıcı Paneli
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="showProfile()">
                                        <i class="fas fa-user"></i> Profil
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="showSettings()">
                                        <i class="fas fa-cog"></i> Ayarlar
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item logout-link" href="#" onclick="logout()">
                                        <i class="fas fa-sign-out-alt"></i> Çıkış Yap
                                    </a>
                                </li>
                            </ul>
                        </div>

                        <div class="navbar-divider"></div>
                        <button id="theme-toggle" class="btn btn-theme-toggle" onclick="toggleTheme()">
                            <i id="theme-icon" class="fas fa-moon"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid flex-grow-1 d-flex flex-column">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5" style="position: relative; z-index: 1; background-color: #f8f9fa;">
        <div class="container">
            <div class="row py-3">
                <div class="col-md-6">
                    &copy; 2025 - Transport Management System
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- API Configuration - Server-side'dan konfigürasyon al -->
    <script>
        // Server-side'dan konfigürasyon al
        window.gatewayUrl = '@ViewBag.GatewayUrl';
        window.apiKey = '@ViewBag.ApiKey';
    </script>
    
    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/api-config.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Auth kontrolü -->
    <script>
                function updateNavbar() {
            // Token kontrolü
            const token = localStorage.getItem('token');
            const authButtons = document.getElementById('auth-buttons');
            const profileMenu = document.getElementById('profile-menu');
            const usernameDisplay = document.getElementById('username-display');
            const navbarAdminLink = document.getElementById('navbar-admin-link');
            const dropdownAdminLink = document.getElementById('dropdown-admin-link');
            const navbarUserLink = document.getElementById('navbar-user-link');
            
            console.log('updateNavbar called, token:', token);
            console.log('navbarAdminLink element:', navbarAdminLink);
            console.log('dropdownAdminLink element:', dropdownAdminLink);
            console.log('authButtons element:', authButtons);
            console.log('profileMenu element:', profileMenu);

            if (token && token !== 'null' && token !== '""' && token !== 'undefined') {
                console.log('User is logged in - showing profile menu');
                // Login durumu - Profile göster
                if (authButtons) {
                    authButtons.style.display = 'none !important';
                    authButtons.classList.add('d-none');
                }
                if (profileMenu) {
                    profileMenu.style.display = 'flex !important';
                    profileMenu.classList.remove('d-none');
                    profileMenu.classList.add('d-flex');
                }

                // Username ayarla
                try {
                    const tokenData = JSON.parse(token);
                    console.log('Parsed token data:', tokenData);
                    console.log('Token data keys:', Object.keys(tokenData));
                    
                    if (usernameDisplay && tokenData.username) {
                        usernameDisplay.textContent = tokenData.username;
                    }

                    // Rol kontrolü - Sadece Admin (role === 1) için Admin Panel göster
                    const userRole = tokenData.role;
                    console.log('User role:', userRole);
                    console.log('User role type:', typeof userRole);
                    console.log('Is admin?', userRole === 1);

                    if (userRole === 1) {
                        // Admin kullanıcı - Admin Panel linklerini göster, User Panel linklerini gizle
                        console.log('Admin user - showing admin links, hiding user links');
                        if (navbarAdminLink) {
                            navbarAdminLink.style.display = 'block !important';
                            navbarAdminLink.classList.remove('d-none');
                            navbarAdminLink.classList.add('d-block');
                            console.log('Navbar admin link set to block');
                        } else {
                            console.log('navbarAdminLink element not found!');
                        }
                        if (dropdownAdminLink) {
                            dropdownAdminLink.style.display = 'block !important';
                            dropdownAdminLink.classList.remove('d-none');
                            dropdownAdminLink.classList.add('d-block');
                            console.log('Dropdown admin link set to block');
                        } else {
                            console.log('dropdownAdminLink element not found!');
                        }
                        // User panel linklerini gizle
                        if (navbarUserLink) {
                            navbarUserLink.style.display = 'none !important';
                            navbarUserLink.classList.add('d-none');
                            navbarUserLink.classList.remove('d-block');
                            console.log('Navbar user link set to none');
                        }
                    } else {
                        // Normal kullanıcı - User Panel linklerini göster, Admin Panel linklerini gizle
                        console.log('Normal user - showing user links, hiding admin links');
                        if (navbarUserLink) {
                            navbarUserLink.style.display = 'block !important';
                            navbarUserLink.classList.remove('d-none');
                            navbarUserLink.classList.add('d-block');
                            console.log('Navbar user link set to block');
                        } else {
                            console.log('navbarUserLink element not found!');
                        }
                        // Admin panel linklerini gizle
                        if (navbarAdminLink) {
                            navbarAdminLink.style.display = 'none !important';
                            navbarAdminLink.classList.add('d-none');
                            navbarAdminLink.classList.remove('d-block');
                            console.log('Navbar admin link set to none');
                        }
                        if (dropdownAdminLink) {
                            dropdownAdminLink.style.display = 'none !important';
                            dropdownAdminLink.classList.add('d-none');
                            dropdownAdminLink.classList.remove('d-block');
                            console.log('Dropdown admin link set to none');
                        }
                    }
                } catch (e) {
                    console.error('Token parse error:', e);
                    if (usernameDisplay) usernameDisplay.textContent = 'Kullanıcı';
                    // Token parse edilemezse admin linklerini gizle
                    if (navbarAdminLink) {
                        navbarAdminLink.style.display = 'none !important';
                        navbarAdminLink.classList.add('d-none');
                        navbarAdminLink.classList.remove('d-block');
                    }
                    if (dropdownAdminLink) {
                        dropdownAdminLink.style.display = 'none !important';
                        dropdownAdminLink.classList.add('d-none');
                        dropdownAdminLink.classList.remove('d-block');
                    }
                    if (navbarUserLink) {
                        navbarUserLink.style.display = 'none !important';
                        navbarUserLink.classList.add('d-none');
                        navbarUserLink.classList.remove('d-block');
                    }
                }
            } else {
                console.log('User is logged out - showing auth buttons, hiding admin links');
                // Logout durumu - Auth butonları göster, Admin linklerini gizle
                if (authButtons) {
                    authButtons.style.display = 'flex !important';
                    authButtons.classList.remove('d-none');
                    authButtons.classList.add('d-flex');
                }
                if (profileMenu) {
                    profileMenu.style.display = 'none !important';
                    profileMenu.classList.add('d-none');
                    profileMenu.classList.remove('d-flex');
                }
                // Admin ve User linklerini gizle
                if (navbarAdminLink) {
                    navbarAdminLink.style.display = 'none !important';
                    navbarAdminLink.classList.add('d-none');
                    navbarAdminLink.classList.remove('d-block');
                }
                if (dropdownAdminLink) {
                    dropdownAdminLink.style.display = 'none !important';
                    dropdownAdminLink.classList.add('d-none');
                    dropdownAdminLink.classList.remove('d-block');
                }
                if (navbarUserLink) {
                    navbarUserLink.style.display = 'none !important';
                    navbarUserLink.classList.add('d-none');
                    navbarUserLink.classList.remove('d-block');
                }
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            console.log('DOM loaded, updating navbar...');
            updateNavbar();
        });
        
        // Sayfa yüklendikten sonra da navbar'ı güncelle
        window.addEventListener('load', function() {
            console.log('Window loaded, updating navbar again...');
            updateNavbar();
        });

        // Global navbar update fonksiyonu
        window.updateNavbar = updateNavbar;

        // Logout fonksiyonu
        function logout() {
            if (confirm('Çıkış yapmak istediğinize emin misiniz?')) {
                localStorage.removeItem('token');
                window.location.href = '/Account/Logout';
            }
        }

        // Profile sayfası göster
        function showProfile() {
            alert('Profil sayfası yakında eklenecek!');
        }

        // Settings sayfası göster
        function showSettings() {
            alert('Ayarlar sayfası yakında eklenecek!');
        }

        // Tema toggle fonksiyonu
        function toggleTheme() {
            if (window.setTheme) {
                const currentTheme = document.body.classList.contains('dark') ? 'dark' : 'light';
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                window.setTheme(newTheme, true);
            }
        }
    </script>

    <!-- Page specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Modals", required: false)

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Çıkış Onayı</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Çıkış yapmak istediğinize emin misiniz?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="button" class="btn btn-danger" id="confirmLogoutBtn">Çıkış Yap</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>