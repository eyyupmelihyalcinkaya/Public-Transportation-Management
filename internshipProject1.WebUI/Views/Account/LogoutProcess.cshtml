@{
    ViewData["Title"] = "Logging Out";
    Layout = "_Layout";
}

<style>
    /* Koyu tema için agresif override */
    body.dark .container .card,
    body.dark .row .card,
    body.dark .col-md-6 .card,
    body.dark .logout-process-card {
        background: #1e293b !important;
        color: #f8fafc !important;
        border: 1px solid #334155 !important;
    }
    
    body.dark .container .card-body,
    body.dark .row .card-body,
    body.dark .col-md-6 .card-body,
    body.dark .logout-process-card .card-body {
        background: #1e293b !important;
        color: #f8fafc !important;
    }
    
    body.dark .card-title,
    body.dark .text-primary,
    body.dark h4.text-primary {
        color: #3b82f6 !important;
    }
    
    body.dark .card-text,
    body.dark .text-muted {
        color: #9ca3af !important;
    }
    
    body.dark .spinner-border.text-primary {
        color: #3b82f6 !important;
    }
</style>

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm logout-process-card">
                <div class="card-body p-5">
                    <div class="spinner-border text-primary mb-3" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <h4 class="card-title text-primary">Logging Out...</h4>
                    <p class="card-text text-muted">Please wait, secure logout process is being performed.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Tema bilgisini koru ve uygula
    document.addEventListener('DOMContentLoaded', function() {
        // Tema ayarı
        const theme = localStorage.getItem('theme') || 'light';
        document.body.classList.remove('light', 'dark');
        document.body.classList.add(theme);

        // Sadece token'ı sil
        localStorage.removeItem('token');
        // localStorage.clear(); // Tüm localStorage'ı temizleme!
        
        // Navbar'ı güncelle
        setTimeout(function() {
            if (window.updateNavbar) {
                window.updateNavbar();
            } else {
                const authButtons = document.getElementById('auth-buttons');
                const profileMenu = document.getElementById('profile-menu');
                if (profileMenu) {
                    profileMenu.style.display = 'none !important';
                    profileMenu.classList.add('d-none');
                    profileMenu.classList.remove('d-flex');
                }
                if (authButtons) {
                    authButtons.style.display = 'flex !important';
                    authButtons.classList.remove('d-none');
                    authButtons.classList.add('d-flex');
                }
            }
            // Ana sayfaya yönlendir
            setTimeout(function() {
                window.location.href = '/Home/Index';
            }, 1000);
        }, 500);
    });
</script> 